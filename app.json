{
    "name": "SplinShot",
    "description": "Poweful Telegram Bot To Get Instagram And Google Photos",
    "repository": "https://github.com/BugHunter0",
    "keywords": [
       
        "telegram bot",
        "pyrogram",
        "splinshot"
    ],
    "env": {
        "BOT_TOKEN": {
            "description": "Your Bot token from @Botfather"
        },
        "API_ID": {
            "description": "Your API_ID from https://my.telegram.org/apps"
        },
        "API_HASH": {
            "description": "Your API_HASH from https://my.telegram.org/apps"
        },
        "CHROMEDRIVER_PATH": {
            "description": "Put '/app/.chromedriver/bin/chromedriver' here."
        },
        "GOOGLE_CHROME_BIN": {
            "description": "Put '/app/.apt/usr/bin/google-chrome' here. "
        }
        
    },
    "buildpacks": [
        {
         "url": "heroku/python"
      },


      {
      	"url": "https://github.com/heroku/heroku-buildpack-chromedriver"
      },

      {
        "url": "https://github.com/heroku/heroku-buildpack-google-chrome"
      }
    ],
    
    "stack": "heroku-18"
}
